@model Supplier

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="NAME" class="control-label"></label>
                <input asp-for="NAME" class="form-control" />
                <span asp-validation-for="NAME" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="ADDRESS" class="control-label"></label>
                <input asp-for="ADDRESS" class="form-control" />
                <span asp-validation-for="ADDRESS" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="ADDRESS_NUMBER" class="control-label"></label>
                <input asp-for="ADDRESS_NUMBER" class="form-control" />
                <span asp-validation-for="ADDRESS_NUMBER" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="COMPLEMENT" class="control-label"></label>
                <input asp-for="COMPLEMENT" class="form-control" />
                <span asp-validation-for="COMPLEMENT" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="ZIP_CODE" class="control-label"></label>
                <input asp-for="ZIP_CODE" class="form-control" />
                <span asp-validation-for="ZIP_CODE" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="NEIGHBORHOOD" class="control-label"></label>
                <input asp-for="NEIGHBORHOOD" class="form-control" />
                <span asp-validation-for="NEIGHBORHOOD" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="CITY" class="control-label"></label>
                <input asp-for="CITY" class="form-control" />
                <span asp-validation-for="CITY" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="STATE" class="control-label"></label>
                <input asp-for="STATE" class="form-control" />
                <span asp-validation-for="STATE" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="STATUS" />
            <div class="form-group m-3">
                <input class="btn btn-primary m-3" type="submit" value="Salvar" />
                <a class="btn btn-primary m-3" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script language="javascript">
    function changeColor(selectElement) {
        var isActive = selectElement.value === "true";
        if (isActive) {
            selectElement.classList.remove("text-danger");
            selectElement.classList.add("text-success");
        } else {
            selectElement.classList.remove("text-success");
            selectElement.classList.add("text-danger");
        }
    }
</script>