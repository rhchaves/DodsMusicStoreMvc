@model Product

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="Active" class="control-label"></label>
                <select asp-for="Active" id="active" class="form-control fw-bold @(Model.Active ? "text-success" : "text-danger")" onchange="changeColor(this)">
                    <option value="true" class="text-success fw-bold">Ativo</option>
                    <option value="false" class="text-danger fw-bold">Desativado</option>
                </select>
            </div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group m-3">
                <input class="btn btn-primary m-3" type="submit" value="Salvar" />
                <a class="btn btn-primary m-3" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script language="javascript">
    function changeColor(selectElement) {
        var isActive = selectElement.value === "true";
        if (isActive) {
            selectElement.classList.remove("text-danger");
            selectElement.classList.add("text-success");
        } else {
            selectElement.classList.remove("text-success");
            selectElement.classList.add("text-danger");
        }
    }
</script>