@model Product

@{
    ViewData["Title"] = "Cadastrar Novo Produto";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-3">
                <label asp-for="SUPPLIER_ID" class="control-label">Fornecedor</label>
                <select asp-for="SUPPLIER_ID" class="form-control" asp-items="ViewBag.Supplier"></select>
                <span asp-validation-for="SUPPLIER_ID" class="text-danger"></span>
            </div>

            <div class="form-group m-3">
                <label asp-for="NAME" class="control-label"></label>
                <input asp-for="NAME" class="form-control" />
                <span asp-validation-for="NAME" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="DESCRIPTION" class="control-label"></label>
                <input asp-for="DESCRIPTION" class="form-control" />
                <span asp-validation-for="DESCRIPTION" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IMAGE_UPLOAD" class="control-label"></label>

                <div class="input-group custom-file-button">
                    <input type="file" class="form-control" id="ImageUpload" asp-for="IMAGE_UPLOAD">
                    <label class="input-group-text" for="ImageUpload">Escolher</label>
                </div>

                <span asp-validation-for="IMAGE_UPLOAD" class="text-danger"></span>
            </div>

            @* <div class="form-group m-3">
                <label asp-for="IMAGE_URI" class="control-label"></label>
                <input asp-for="IMAGE_URI" class="form-control" />
                <span asp-validation-for="IMAGE_URI" class="text-danger"></span>
            </div> *@
            <div class="form-group m-3">
                <label asp-for="PRICE" class="control-label"></label>
                <input asp-for="PRICE" class="form-control" />
                <span asp-validation-for="PRICE" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <label asp-for="STOCK_QTD" class="control-label"></label>
                <input asp-for="STOCK_QTD" class="form-control" />
                <span asp-validation-for="STOCK_QTD" class="text-danger"></span>
            </div>
            <div class="form-group m-3">
                <input class="btn btn-primary" type="submit" value="Salvar" />
                <a class="btn btn-primary m-3" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $("#ImageUpload").attr("data-val", "true");
        $("#ImageUpload").attr("data-val-required", "Preencha o campo Imagem");
    </script>
}
